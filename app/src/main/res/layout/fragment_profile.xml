<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mokalone"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profil Menu"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/text_view"
        android:background="#869fdb"/>

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Ini adalah profil menu"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/text_view"/>

    <ImageView
        android:id="@+id/foto_profil"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/mokkss"
        android:layout_centerInParent="true"
        android:layout_below="@id/text_view2"/>

    <TextView
        android:id="@+id/nama_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Mochammad Khafidz"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_below="@id/foto_profil"/>

    <TextView
        android:id="@+id/nim_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="20.52.0005"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_below="@id/nama_profil"/>

    <TextView
        android:id="@+id/prodi_profil"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="S1 - Teknologi Informasi"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_below="@id/nim_profil"/>


</RelativeLayout>