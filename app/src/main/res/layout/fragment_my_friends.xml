<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mokalone"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Teman"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#869fdb"/>

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Ini adalah daftar teman"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_below="@id/text_view"/>

    <TextView
        android:id="@+id/nama1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Moka"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_centerInParent="true"
        android:layout_below="@id/text_view2"/>

    <TextView
        android:id="@+id/nama2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Enzy"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_centerInParent="true"
        android:layout_below="@id/nama1"/>

    <TextView
        android:id="@+id/nama3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Matt"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_centerInParent="true"
        android:layout_below="@id/nama2"/>

    <TextView
        android:id="@+id/nama4"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Clara"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_centerInParent="true"
        android:layout_below="@id/nama3"/>

    <TextView
        android:id="@+id/nama5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Eren"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:padding="10dp"
        android:background="#2d91e3"
        android:layout_centerInParent="true"
        android:layout_below="@id/nama4"/>

</RelativeLayout>